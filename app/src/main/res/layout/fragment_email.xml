<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    >


    <Space
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:layout_gravity="center_horizontal" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textEmailAddress"
        android:ems="10"
        android:id="@+id/emailFragmentInput"
        android:layout_gravity="center_horizontal"
        android:focusable="true"
        android:hint="Email"
        android:editable="true"
        android:elegantTextHeight="true"
        android:focusableInTouchMode="true" />

    <Space
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:layout_gravity="right" />

    <Button
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:text="Validate!"
        android:id="@+id/buttonValidate"
        android:layout_gravity="center_horizontal"
        android:focusable="true"
        android:focusableInTouchMode="false"
        android:clickable="true"
        android:textColor="@color/main_button_text"
        android:background="@color/buttons_bg"
        android:onClick="alertBox"/>

    <Space
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:layout_gravity="center_horizontal" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/scrollView">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Verified! Your email address can be emailed to."
                android:id="@+id/textView"
                android:background="#ff67d358"
                android:textColor="@color/main_button_text"
                android:padding="6dp"
                android:layout_margin="2dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Unknown... We are unsure about this one, proceed with caution."
                android:id="@+id/textView6"
                android:background="#b0ff9600"
                android:textColor="@color/main_button_text"
                android:padding="6dp"
                android:layout_gravity="center_horizontal"
                android:layout_margin="2dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Undeliverable... Don&apos;t bother sending to this email address."
                android:id="@+id/textView3"
                android:background="#4f000000"
                android:textColor="@color/main_button_text"
                android:padding="6dp"
                android:layout_margin="2dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Unreachable... The email domain does not exist."
                android:id="@+id/textView2"
                android:background="#4f000000"
                android:textColor="@color/main_button_text"
                android:padding="6dp"
                android:layout_gravity="center_horizontal"
                android:layout_margin="2dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Illegitimate... These emails are dangerous to email to."
                android:id="@+id/textView4"
                android:background="#4f000000"
                android:textColor="@color/main_button_text"
                android:padding="6dp"
                android:layout_gravity="center_horizontal"
                android:layout_margin="2dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Disposable... These are most likely fake."
                android:id="@+id/textView5"
                android:background="#4f000000"
                android:textColor="@color/main_button_text"
                android:padding="6dp"
                android:layout_gravity="center_horizontal"
                android:layout_margin="2dp" />

        </LinearLayout>
    </ScrollView>

    <!--
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/scrollView"
            android:focusable="false"
            android:focusableInTouchMode="true"
            android:clickable="false" >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/emailFragmentTextView"
                android:text="EDQ Email Validation just happened" />

        </ScrollView>
    -->
</LinearLayout>